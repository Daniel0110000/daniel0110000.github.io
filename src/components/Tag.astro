---
interface Props {
    tag_icon: string,
    tag_label: string,
    tag_with_animation?: boolean
}

const {tag_icon, tag_label, tag_with_animation = false} = Astro.props;

import "../styles/tag.css"
---

<div class={`tag ${tag_with_animation && "tag_with_anim"}`}>
    <img src={tag_icon} class="tag_icon"/>
    <p class="tag_title">{tag_label}</p>
</div>